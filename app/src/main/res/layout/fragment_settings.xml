<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/third_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_back"
        android:backgroundTint="@android:color/transparent"
        android:padding="1dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Pengaturan"
        android:textColor="@color/primary_900"
        android:textSize="@dimen/heading_h2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="364dp"
        android:layout_height="263dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/rectangle_11" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:srcCompat="@drawable/fluent_dark_theme" />

    <TextView
        android:id="@+id/modetheme"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="Tema Aplikasi"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_marginStart="208dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/switchi"
        app:layout_constraintBottom_toBottomOf="@+id/modetheme"
        app:layout_constraintStart_toStartOf="@+id/modetheme"
        app:layout_constraintTop_toTopOf="@+id/modetheme"
        app:layout_constraintVertical_bias="0.545" />

    <ImageView
        android:id="@+id/imagelanguage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:srcCompat="@drawable/language" />

    <TextView
        android:id="@+id/tekslanguage"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="Bahasa Aplikasi"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imagelanguage"
        app:layout_constraintStart_toEndOf="@+id/imagelanguage"
        app:layout_constraintTop_toTopOf="@+id/imagelanguage"
        app:layout_constraintVertical_bias="0.55" />

    <ImageButton
        android:id="@+id/switchlanguage"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_marginStart="208dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/switchi"
        app:layout_constraintBottom_toBottomOf="@+id/tekslanguage"
        app:layout_constraintStart_toStartOf="@+id/tekslanguage"
        app:layout_constraintTop_toTopOf="@+id/tekslanguage"
        app:layout_constraintVertical_bias="0.545" />

    <ImageView
        android:id="@+id/imagefaq"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/imagelanguage"
        app:srcCompat="@drawable/faq_icon" />

    <TextView
        android:id="@+id/teksfaq"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="FAQ"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imagefaq"
        app:layout_constraintStart_toEndOf="@+id/imagefaq"
        app:layout_constraintTop_toTopOf="@+id/imagefaq"
        app:layout_constraintVertical_bias="0.55" />

    <ImageView
        android:id="@+id/imagetelephone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/imagefaq"
        app:srcCompat="@drawable/img_telephone" />

    <TextView
        android:id="@+id/tekstelephone"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="Kontak Developer"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imagetelephone"
        app:layout_constraintStart_toEndOf="@+id/imagetelephone"
        app:layout_constraintTop_toTopOf="@+id/imagetelephone"
        app:layout_constraintVertical_bias="0.55" />

    <ImageView
        android:id="@+id/imageprivacy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/imagetelephone"
        app:srcCompat="@drawable/img_privacy" />

    <TextView
        android:id="@+id/teksprivacy"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="Privasi dan Keamanan"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageprivacy"
        app:layout_constraintStart_toEndOf="@+id/imageprivacy"
        app:layout_constraintTop_toTopOf="@+id/imageprivacy"
        app:layout_constraintVertical_bias="0.55" />


</androidx.constraintlayout.widget.ConstraintLayout>