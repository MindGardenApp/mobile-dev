<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/app_logo" />

        <!-- Title -->
        <TextView
            android:id="@+id/login_or_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Daftar atau Masuk"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Buat akun baru atau masuk \nmenggunakan akun yang sudah ada"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/font_gray_dark"/>

        <!-- Tombol Login & Register -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_swipe">

            <Button
                android:id="@+id/btn_login_page"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Log In"
                app:cornerRadius="16dp"
                android:textColor="@color/gray_light"
                android:backgroundTint="@color/green_light" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btn_register_page"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Sign Up"
                app:cornerRadius="16dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/font_gray_dark"/>
        </LinearLayout>

        <!-- Name -->
        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Name"
            android:textColor="@color/font_gray_dark"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/et_white_border"/>

        <!-- Email -->
        <TextView
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="@color/font_gray_dark"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/et_white_border"/>

        <!-- Password -->
        <TextView
            android:id="@+id/text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Atur Password"
            android:textSize="14sp"
            android:textColor="@color/font_gray_dark"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/et_white_border"
            android:inputType="textPassword" />

        <!-- Confirm Password -->
        <TextView
            android:id="@+id/text_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Atur Password"
            android:textSize="14sp"
            android:textColor="@color/font_gray_dark"/>

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/et_white_border"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:layout_marginTop="24dp"
            android:text="Register"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/green_primary"/>

    </LinearLayout>
</ScrollView>
